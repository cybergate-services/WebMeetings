// app global css in Stylus form
#q-app {
    color: rgba(255, 255, 255, 0.75);
    background: -webkit-linear-gradient(bottom, #243b55, #141e30);
}

.video-container .controls {
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
    background: rgba(0, 0, 0, 0.45);
    height: auto !important;
}

.video-container .username {
    background: rgba(0, 0, 0, 0.45);
    color: white;
    position: absolute;
    top: 0;
    right: 0;
    padding-left: 4px;
    padding-right: 4px;
    display: flex;
    align-items: center;
    width: auto !important;
    height auto !important;
}

.video-container:not(:hover) .controls {
    transition-delay: 0.3s;
}

.video-container:hover .controls, .video-container:active .controls {
    opacity: 1;
}

.video-container {
    width: 100%;
    position: relative;
    background: black;
}

.video-layout {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 8px;
    flex-wrap: wrap;
    margin-left: auto;
    margin-right: auto;
}

.video-layout > div {
    padding: 8px;
}

.video-layout > div.activeSpeaker {
    border-style: ridge;
    border-color: #8bc34a;
    border-width: 4px;
    padding: 4px;
}
